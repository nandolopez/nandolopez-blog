---
import { getCollection } from "astro:content";
import FormattedDate from "../FormattedDate.astro";

interface Props {
	page?: number;
}

const { page } = Astro.props;

const Posts = (await getCollection('blog')).sort(
    (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
)

const CurrentPage = page ?? 0
const TotalPages = Math.ceil(Posts.length / CurrentPage)

const Offset = 10 * (CurrentPage - 1)
const PaginatedItems = Posts.slice(Offset, 10 * CurrentPage)

const HaveMorePages = CurrentPage <= TotalPages
const FirstPage = CurrentPage === 0
---

<section class="flex flex-col gap-4 w-full">
    <h3 class="text-3xl">Last Posts</h3>
    {
        PaginatedItems.map((post) => (
            <article class="bg-sky-100 dark:bg-blue-950 p-4 rounded-xl">
                <a href={`/blog/${post.slug}/`}>							
                    <h4 class="text-2xl">{post.data.title}</h4>
                    <p >{post.data.description}</p>
                    <p class="date">
                        <FormattedDate date={post.data.pubDate} />
                    </p>
                </a>
            </article>
        ))
    }
    { FirstPage && <a href="#">Previous page</a> }
    { HaveMorePages && <a href="#">More posts</a> }
</section>