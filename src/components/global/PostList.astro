---
import { getCollection } from "astro:content";
import FormattedDate from "../FormattedDate.astro";

interface Props {
	page?: number;
}

const { page } = Astro.props;

const posts = (await getCollection('blog')).sort(
    (a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
)

const CurrentPage = page || 0
const totalPages = Math.ceil(posts.length / CurrentPage)

const offset = 10 * (CurrentPage - 1)
const paginatedItems = posts.slice(offset, 10 * CurrentPage)
---

<section class="flex flex-col gap-4 w-full">
    <h3 class="text-3xl">Last posts</h3>
    {
        posts.map((post) => (
            <article class="bg-sky-100 dark:bg-blue-950 p-4 rounded-xl">
                <a href={`/blog/${post.slug}/`}>							
                    <h4 class="text-2xl">{post.data.title}</h4>
                    <p >{post.data.description}</p>
                    <p class="date">
                        <FormattedDate date={post.data.pubDate} />
                    </p>
                </a>
            </article>
        ))
    }
    
</section>