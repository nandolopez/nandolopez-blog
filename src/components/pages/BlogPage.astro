---
import { getCollection } from "astro:content";
import PostList from "../global/PostList.astro";
const Posts = await getCollection("blog");

interface Props {
  translation: any;
}

const { translation } = Astro.props;
---

<h1 class="text-4xl font-bold">{translation.h1_title}</h1>
<h2 class="text-3xl">{translation.h2_subtitle}</h2>
<div class="container mx-auto">
  <PostList Collection={Posts} />
</div>
