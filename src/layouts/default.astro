---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/structure/BaseHead.astro";
import Header from "../components/structure/Header.astro";
import Footer from "../components/structure/Footer.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body
		class="bg-sky-200 dark:bg-indigo-900 dark:text-white flex flex-col justify-between h-screen p-4"
	>
		<Header class="h-10" />
		<main  class="h-10 flex flex-col gap-4 w-3/4 mx-auto mb-auto p-4">
			<slot />
		</main>
		<Footer />
	</body>
</html>
